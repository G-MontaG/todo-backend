{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "removeComments": false,
    "skipLibCheck": true,
    "alwaysStrict": true,
    "outDir": "../compiled",
    "lib": [
      "es2016",
      "es2017",
      "esnext"
    ],
    "typeRoots": [
      "../node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "../node_modules",
    "typings/main",
    "typings/main.d.ts"
  ],
  "compileOnSave": true,
  "buildOnSave": true
}
